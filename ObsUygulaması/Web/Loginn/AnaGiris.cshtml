
@{
    ViewBag.Title = "AnaGiris";
}

<h2>AnaGiris</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <title>Trakya Üniversitesi Öğrenci Otomasyonu</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-7 p-6 bg-warning text-white">
                <img src="/Web/img/trakya-universitesi-logo.png" class="img-fluid" alt="Trakya Üniversitesi">

            </div>

            <div class="col-sm-5 p-6 bg-dark text-white">
                <br><br><br><br><br>
                <h1 class="mt-4"><center>Trakya Üniversitesi Öğrenci Otomasyonu</center></h1>
                <h2 class="mt-5"><center>Öğrenci Girişi</center></h2>
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                        <form action="@Url.Action("StudentLogin", "Login")" method="post">
                            @using (Html.BeginForm("StudentLogin", "Login", FormMethod.Post))
                            {
                                <div class="mb-3 mt-3">
                                    <label for="ogrencino" class="form-label">Öğrenci No : </label>
                                    <input type="text" class="form-control " id="ogrencino" name="OgrNo">
                                </div>
                                <div class="mb-3">
                                    <label for="sifre" class="form-label">Şifre : </label>
                                    <input type="password" class="form-control" id="sifre" name="password">
                                </div>
                                <div class="form-check mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="remember"> Beni Hatırla
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary">Giriş</button>
                            }
                        </form>
                        <h2 class="mt-5"><center>Yönetici Girişi</center></h2>

                        <form action="@Url.Action("AdminLogin", "Login")" method="post">
                            @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                            {
                                <div class="mb-3 mt-3">
                                    <label for="ogrencino" class="form-label">Username : </label>
                                    <input type="text" class="form-control " id="ogrencino" name="username">
                                </div>
                                <div class="mb-3">
                                    <label for="sifre" class="form-label">Şifre : </label>
                                    <input type="password" class="form-control" id="sifre" name="password">
                                </div>
                                <div class="form-check mb-3">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="remember"> Beni Hatırla
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-primary">Giriş</button>
                            }
                        </form>
                    </div>
                    <div class="col-sm-3"></div>

                </div>


            </div>

        </div>
    </div>

</body>
</html>