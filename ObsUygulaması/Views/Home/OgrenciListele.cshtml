@model IEnumerable<ObsUygulaması.Models.Ogrenci>

@{
    ViewBag.Title = "Öğrenci Listele";
}

<h2>Öğrenci Listele</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Ogrencis")
</p>
<table class="table">
    <tr>
        <th>
            Ad Soyad :
        </th>
        <th>
            Öğrenci Numarası :
        </th>
        <th>
            Bölümü :
        </th>
        <th>
            Mail Adresi :
        </th>
        <th>
            Telefon Numarası :
        </th>
        <th>
            Adres :
        </th>
        <th>
            Şifre :
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AdSoyad)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.No)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Bolum)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tel)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sifre)
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Edit", "Ogrencis", new { id = item.Id }, null) |
        @Html.ActionLink("Detay", "Details", "Ogrencis", new { id = item.Id }, null) |
        @Html.ActionLink("Sil", "Delete", "Ogrencis", new { id = item.Id }, null)
    </td>
</tr>
    }

</table>
<div>
    @Html.ActionLink("Önceki Sayfa", "AdminInfo")
</div>