@model IEnumerable<ObsUygulaması.Models.Ders>

@{
    ViewBag.Title = "Index";
}

<h2>Dersler</h2>

<p>
    @Html.ActionLink("Yeni Ders Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ders Adı :
        </th>
        <th>
            Öğrenci Ad Soyad :
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DersAdı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Önceki Sayfa", "AdminInfo", "Home")
</div>